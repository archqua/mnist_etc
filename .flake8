[flake8]
ignore =
    # line too long
    E501,
    # whitespace before ':'
    E203,
    # line break occurred before a binary operator
    # doesn't even know what it wants
    # black seems to handle this anyway
    W503,
per-file-ignores =
    # unused imports
    __init__.py: F401
    **/__init__.py: F401
